#version 430

layout(set = 0, binding = 0) volatile buffer TEST {
	uint x;
} test; 

layout(set = 0, binding = 1) volatile buffer COUNTER {
	uint counter;
} counter;

layout(local_size_x = 1, local_size_y = 1, local_size_z = 1) in;

void main()
{
	uint gid_x = gl_GlobalInvocationID.x;
	int pc = 0;

	if (gid_x == 0) { 
	   int terminate = 0;

	while (true) {
	   if (terminate == 1) {
	   break;
	}
	switch(pc) {

	  case 0: 
		if (atomicExchange(test.x, 0) ==  1) { 
		   pc = 0;
		}
		else {
		   pc = pc + 1;
		}
		break;

	  case 1:
		terminate = 1;
		break;

	     }
	   }
	}

	if (gid_x == 1) { 
	   int terminate = 0;

	while (true) {
	   if (terminate == 1) {
	   break;
	}
	switch(pc) {

	  case 0: 
		if (atomicExchange(test.x, 1) ==  0) { 
		   pc = 0;
		}
		else {
		   pc = pc + 1;
		}
		break;

	  case 1:
		terminate = 1;
		break;

	     }
	   }
	}

	atomicAdd(counter.counter, 1);
}