#version 450

layout(local_size_x = 256) in;

layout(std430, binding = 0) buffer InputA {
    float a[];
};

layout(std430, binding = 1) buffer InputB {
    float b[];
};

layout(std430, binding = 2) buffer Output {
    float result[];
};

void main() {
    uint idx = gl_GlobalInvocationID.x;
    result[idx] = a[idx] + b[idx];
}
